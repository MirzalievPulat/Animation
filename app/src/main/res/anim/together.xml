<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <rotate
        android:fromDegrees="0"
        android:toDegrees="360"
        android:duration="1000"
        android:pivotX="50%"
        android:pivotY="50%" />

    <scale
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="1000"
        android:fromYScale="0"
        android:fromXScale="0"
        android:toYScale="4"
        android:toXScale="4" />

</set>